<?xml version="1.0" encoding="utf-8"?>
<manifest android:versionCode="4" android:versionName="1.2" package="com.RSen.LionTime"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:theme="@style/AppTheme" android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:allowBackup="true">
        <activity android:label="@string/app_name" android:name="com.RSen.LionTime.SettingsActivity" />
        <receiver android:name="com.RSen.LionTime.NotificationReceiver" android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="com.RSen.LionTime.SHOW_NOTIFICATION" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.RSen.LionTime.CancelNotificationReceiver" android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="com.RSen.LionTime.CANCEL_NOTIFICATION" />
            </intent-filter>
        </receiver>
        <receiver android:label="Lion Time Compact (4x1)" android:name="com.RSen.LionTime.Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.RSen.LionTime.WIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_compact" />
        </receiver>
        <activity android:theme="@style/DialogTheme" android:label="@string/title_activity_view_schedule" android:name="com.RSen.LionTime.ViewScheduleActivity" android:exported="true" android:excludeFromRecents="true" android:launchMode="singleInstance" />
        <activity android:theme="@style/DialogTheme" android:label="@string/title_activity_change_schedule" android:name="com.RSen.LionTime.ChangeScheduleActivity" android:excludeFromRecents="true" android:launchMode="singleInstance" />
        <receiver android:name="com.RSen.LionTime.NewDayReceiver" android:enabled="true" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="com.RSen.LionTime.NEW_DAY" />
            </intent-filter>
        </receiver>
        <activity android:label="@string/app_name" android:name="com.RSen.LionTime.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:label="Lion Time" android:icon="@drawable/ic_dashclock" android:name="com.RSen.LionTime.MyDashClock" android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA">
            <intent-filter>
                <action android:name="com.google.android.apps.dashclock.Extension" />
            </intent-filter>
            <meta-data android:name="protocolVersion" android:value="1" />
            <meta-data android:name="description" android:value="Shows the time until your next class..." />
        </service>
    </application>
</manifest>